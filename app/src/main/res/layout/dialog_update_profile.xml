<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="15dp"
    android:background="@drawable/gradient_background"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="10dp"
        android:text="UPDATE PROFILE"
        android:textSize="14sp"
        android:layout_margin="15dp"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="Display Name"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/dialog_update_profile_etDisplayName"
        android:textSize="22sp"
        android:inputType="text"
        android:maxLength="30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="Email Address"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/dialog_update_profile_etEmailAddress"
        android:textSize="22sp"
        android:inputType="textEmailAddress"
        android:maxLength="30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="Gender"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/dialog_update_profile_spnGender"
        android:entries="@array/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>


    <TextView
        android:layout_marginTop="10dp"
        android:text="Age"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/dialog_update_profile_etAge"
        android:textSize="22sp"
        android:inputType="number"
        android:maxLength="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="City/Town"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/dialog_update_profile_etCity"
        android:textSize="22sp"
        android:inputType="text"
        android:maxLength="30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="Province"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/dialog_update_profile_spnProvince"
        android:entries="@array/provinces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <Button
        android:id="@+id/dialog_update_profile_btnUpdateProfile"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:text="UPDATE"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        style="@style/Button.Accent.Outline"
        android:layout_height="match_parent" />




</LinearLayout>