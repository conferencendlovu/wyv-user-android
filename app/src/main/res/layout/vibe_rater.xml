<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background_2"
    android:layout_width="200dp"
    android:layout_height="300dp">

    <TextView
        android:text="EVENT NAME"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:textAllCaps="true"
        android:textSize="28sp"
        fontPath="fonts/bold.ttf"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix" />

    <com.app.infideap.stylishwidget.view.AMeter
        android:id="@+id/vibe_rater_gauge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        fontPath="fonts/regular.ttf"
        app:sw_lineStrokeSize="30dp"
        app:sw_lineWidth="2.8"
        app:sw_maxValue="100"
        app:sw_meterColor="@color/colorPrimaryDark"
        app:sw_numberOfLine="100"
        app:sw_showNeedle="false"
        app:sw_showText="true"
        app:sw_startValue="0"
        app:sw_textSize="50dp"
        app:sw_unit="points" />

    <TextView
        android:text="Move the slider below to set your rating for this event"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:layout_gravity="center_horizontal"
        android:id="@+id/vibe_rater_seekbar"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/vibe_rater_btnSubmitRating"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:text="SUBMIT RATING"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        style="@style/Button.Accent.Outline"
        android:layout_height="match_parent" />

</LinearLayout>